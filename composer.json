{
    "name": "momentumwebook/wordpress-plugin",
    "description": "Momentum Webhook Manager - WordPress plugin for Gravity Forms webhook integration",
    "type": "wordpress-plugin",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress momentum-webhook-manager.php gravity-forms-field-mapper.php",
        "phpcbf": "phpcbf --standard=WordPress momentum-webhook-manager.php gravity-forms-field-mapper.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}